   Name="ManagerGrantVO"
   BindingStyle="OracleName"
   CustomQuery="true"
   RowClass="cux.oracle.apps.per.bonus.manager.server.ManagerGrantVORowImpl"
   ComponentClass="cux.oracle.apps.per.bonus.manager.server.ManagerGrantVOImpl"
   FetchMode="FETCH_AS_NEEDED"
   UseGlueCode="false" >
   <SQLQuery><![CDATA[
select distinct
t.person_distribution_id,
ppf.employee_number employee_number,
ppf.last_name ,
t.dep_name,
t.distribution_amount,
t.distribution_date,
t.project_id,
ppa.segment1,
ppa.name,
cux_hr_bonus.GET_PROJECT_MANAGER_NAME(t.project_id) manager,
t.note,
case when t.import_status='已退回'
then '已退回'
else
t.distribution_status
end distribution_status,
t.attribute1,
cux_hr_bonus.get_project_budget(ppa.project_id)-cux_hr_bonus.get_project_distributed(ppa.project_id) as distributable_amt
from cux_bonus_person_distribution t,
per_all_people_f  ppf,
pa_projects_all ppa
where  t.person_id=ppf.person_id
and t.attribute3='MA'
and t.project_id=ppa.project_id
and t.distribution_status!='已删除'
order by ppa.name,nlssort(ppf.last_name, 'NLS_SORT=SCHINESE_PINYIN_M'),t.distribution_date
   ]]></SQLQuery>
