<!DOCTYPE ViewObject SYSTEM "jbo_03_01.dtd">

<ViewObject
   Name="AdvAwardsOperatorVO"
   BindingStyle="OracleName"
   CustomQuery="true"
   RowClass="oracle.apps.fnd.framework.server.OAViewRowImpl"
   ComponentClass="cux.oracle.apps.per.bonus.advanceawards.server.AdvAwardsOperatorVOImpl"
   FetchMode="FETCH_AS_NEEDED"
   UseGlueCode="false" >
   <SQLQuery><![CDATA[
SELECT pf.employee_number, pf.last_name, hu.name AS dept_name
  FROM PER_ALL_PEOPLE_F          pf,
       PER_ALL_ASSIGNMENTS_F     paf,
       HR_ALL_ORGANIZATION_UNITS hu,
       FND_USER                  fu
 WHERE pf.PERSON_ID = paf.PERSON_ID
   AND paf.ORGANIZATION_ID = hu.ORGANIZATION_ID
   AND sysdate BETWEEN paf.effective_start_date AND paf.effective_end_date
   AND paf.primary_flag = 'Y'
   AND pf.last_name = fu.description
   AND fu.user_id = (select apps.FND_GLOBAL.user_id from dual)
   AND ROWNUM = 1
   ]]></SQLQuery>
