<!DOCTYPE ViewObject SYSTEM "jbo_03_01.dtd">

<ViewObject
   Name="SpecialAwardsDateVO"
   BindingStyle="OracleName"
   CustomQuery="true"
   RowClass="oracle.apps.fnd.framework.server.OAViewRowImpl"
   ComponentClass="cux.oracle.apps.per.bonus.specialawards.server.SpecialAwardsDateVOImpl"
   FetchMode="FETCH_AS_NEEDED"
   UseGlueCode="false" >
   <SQLQuery><![CDATA[
select gl.period_name
  from gl_period_statuses gl 
 where gl.application_id = 101 
   and gl.period_year >= '2011'
   AND GL.SET_OF_BOOKS_ID = fnd_profile.value('GL_SET_OF_BKS_ID')
   AND GL.PERIOD_NAME NOT LIKE '%-13'
 order by gl.period_name DESC
   ]]></SQLQuery>
   <DesignTime>
      <Attr Name="_isExpertMode" Value="true" />
      <Attr Name="_version" Value="10.1.3.43.6" />
      <Attr Name="_codeGenFlag2" Value="Access|Coll|VarAccess" />
   </DesignTime>
   <ViewAttribute
      Name="PeriodName"
      IsPersistent="false"
      IsNotNull="true"
      Precision="15"
      Type="java.lang.String"
      ColumnType="VARCHAR2"
      AliasName="PERIOD_NAME"
      Expression="PERIOD_NAME"
      SQLType="VARCHAR" >
      <DesignTime>
         <Attr Name="_DisplaySize" Value="15" />
      </DesignTime>
   </ViewAttribute>
</ViewObject>
